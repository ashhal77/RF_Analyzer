<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gauge="http://schemas.android.com/tools"
    android:padding="15dp"
    android:weightSum="100"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="30"
        >
        <com.github.anastr.speedviewlib.PointerSpeedometer
            android:id="@+id/awesomeSpeedometer"
            android:layout_width="wrap_content"
            app:sv_speedTextSize="11dp"
            app:sv_unitTextSize="10dp"
            app:sv_withEffects3D="false"
            app:sv_withTremble="false"
            app:sv_speedTextFormat="INTEGER"
            app:sv_minSpeed="-120"
            app:sv_maxSpeed="30"
            android:layout_centerInParent="true"
            app:sv_speedometerColor="#000077"
            android:layout_height="wrap_content" />
    </RelativeLayout>

<RelativeLayout
    android:id="@+id/relLayout"
    android:layout_width="match_parent"
    android:layout_height="0sp"
    android:layout_weight="70"
    android:padding="5dp"
    >

    <TextView
        android:id="@+id/ssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="SSID"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/value1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="Send Info"
        android:layout_alignParentRight="true"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go back"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/bssid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ssid"
        android:layout_marginTop="19dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/bssid"
        android:layout_alignEnd="@+id/value1"
        android:layout_alignRight="@+id/value1"
        android:text="TextView"/>

    <TextView
        android:id="@+id/speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bssid"
        android:layout_marginTop="28dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignBaseline="@+id/speed"
        android:layout_alignBottom="@+id/speed"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/strength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/speed"
        android:layout_alignRight="@+id/speed"
        android:layout_below="@+id/value6"
        android:layout_marginTop="24dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/strength"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView"/>

    <TextView
        android:id="@+id/ipaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/strength"
        android:layout_marginTop="19dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ipaddress"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView"/>

    <TextView
        android:id="@+id/macaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:layout_below="@+id/ipaddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/value12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/macaddress"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView"/>

    <TextView
        android:id="@+id/freq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/macaddress"
        android:layout_marginTop="25dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/freq"
        android:layout_alignStart="@+id/value12"
        android:text="TextView"/>

</RelativeLayout>
</LinearLayout>
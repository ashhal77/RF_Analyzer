<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        >
        <com.github.anastr.speedviewlib.ProgressiveGauge
            android:id="@+id/progressiveGauge"
            android:layout_width="300dp"
            app:sv_speedTextSize="11dp"
            app:sv_unitTextSize="10dp"
            app:sv_withEffects3D="false"
            app:sv_withTremble="false"
            app:sv_speedTextFormat="INTEGER"
            app:sv_minSpeed="-140"
            app:sv_maxSpeed="10"
            android:layout_centerInParent="true"
            app:sv_speedometerColor="#000077"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="70"
                android:padding="5dp"
                android:weightSum="100"
                android:orientation="vertical"
                android:id="@+id/relLayout">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <TextView
        android:id="@+id/operator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="26dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/operator"
        android:layout_marginEnd="45dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/simoperator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/operator"
        android:layout_below="@+id/operator"
        android:layout_marginTop="28dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/value2"
        android:layout_alignTop="@+id/simoperator"
        android:text="TextView"/>

    <TextView
        android:id="@+id/country"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/simoperator"
        android:layout_below="@+id/simoperator"
        android:layout_marginTop="35dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/country"
        android:layout_alignBottom="@+id/country"
        android:layout_alignStart="@+id/value4"
        android:text="TextView"/>

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="TextView"
        android:layout_below="@+id/country"
        android:layout_alignStart="@+id/country"/>

    <TextView
        android:id="@+id/value8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/value6"
        android:layout_alignTop="@+id/data"
        android:text="TextView"/>

    <TextView
        android:id="@+id/dbm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/data"
        android:layout_below="@+id/data"
        android:layout_marginTop="37dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/value8"
        android:layout_alignTop="@+id/dbm"
        android:text="TextView"/>

    <TextView
        android:id="@+id/cellid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/dbm"
        android:layout_below="@+id/dbm"
        android:layout_marginTop="32dp"
        android:text="TextView"/>

    <TextView
        android:id="@+id/value12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/value10"
        android:layout_alignTop="@+id/cellid"
        android:text="TextView"/>
        </RelativeLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        >
        <Button
            android:id="@+id/info1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="Send Info"
            tools:text="Send Info"/>
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
